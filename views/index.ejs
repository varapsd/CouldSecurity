<html>

<head>
  <link rel="stylesheet" href="/CSS/style.css">
  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <title>Sign in</title>
  <script type="text/javascript">
       function userLogin(){
        var u = document.getElementById('uName').value;
       var p = document.getElementById('uPass').value;
       if(!u || !p){
        window.alert('al feilds required');
        return;
       }
       var request = new XMLHttpRequest();
      
       var params =  "u="+u+"&p="+p;
       request.onreadystatechange = function() {
           if (this.readyState == 4 && this.status == 200) {
            
            if(request.responseText == "Success"){
              window.alert('Success')
              window.location = "/user";
            }
            else
                window.alert(request.responseText);
           }
       };
       request.open("POST", "/login", true);
       request.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
       request.send(params)
       }
       function register(){
        window.location = "/register";
       }
     </script>
</head>

<body>
  <div class="main">
    <p class="sign" align="center">Sign in</p>
    <form class="form1">
      <input class="un " id='uName' type="text" align="center" placeholder="Username">
      <input class="pass" type="password" id="uPass" align="center" placeholder="Password">
      <a class="submit" align="center" onclick="userLogin()">Sign in</a>
      <p class="forgot" align="center"><a href="#">Forgot Password?</p>
        <p class="newUser" align="center" onclick='register()'>New User?</p>
            
                
    </div>
     
</body>

</html>



