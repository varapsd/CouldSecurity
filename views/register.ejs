<html>

<head>
  <link rel="stylesheet" href="CSS/style.css">
  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <title>Sign Up</title>
  <script type="text/javascript">

      function register(){
        var u = document.getElementById('uName').value;
       var p = document.getElementById('uPass').value;
       var p1 = document.getElementById('uPass1').value;
       if(!u || !p || !p1){
        window.alert('danger')
        return;
       }
       if(p1!=p1){
        window.alert('passwords not matching');
        return;
       }
       var request = new XMLHttpRequest();
       var params =  "u="+u+"&p="+p;
       request.onreadystatechange = function() {
           if (this.readyState == 4 && this.status == 200) {
            
            if(request.responseText == "Success"){
              window.alert('Success! please login')
              window.location = "/";
            }
            else
                window.alert('failed');
           }
       };
       request.open("POST", "/register", true);
       request.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
       request.send(params)
       }

    function login() {
      window.location = "/";
    }
  </script>
</head>

<body>
  <div class="main">
    <p class="sign" align="center">Register Now</p>
    <form class="form1">
      <input class="un " id='uName' type="text" align="center" placeholder="Username">
      <input class="pass" id='uPass' type="password" align="center" placeholder="Password">
      <input class="passConfirm" id='uPass1' type="password" align="center" placeholder="Confirm Password">
      <a class="submit" align="center" onclick="register()">Register</a>
        <p class="newUser" align="center" onclick="login()"><a >Existing User?</a></p>
            
                
    </div>
     
</body>

</html>